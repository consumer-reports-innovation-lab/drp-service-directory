{
    "$id": "https://sd.datarightsprotocol.org/business.schema.json",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "[A-Z_]+"
        },
        "name": { "type": "string" },
        "logo": { "type": ["null", "string"] },
        "api_base": {
            "type": "string",
            "pattern": "https://[a-z/.-]+"
        },
        "supported_actions": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "access", "deletion",
                    "sale:opt-out", "sale:opt-in",
                    "access:categories", "access:specific"
                ]
            }
        },
        "privacy_policy_url": {
            "type": "string",
            "pattern": "https://[a-z/.-]+"
        },
        "web_url": {
            "type": "string",
            "pattern": "https://[a-z/.-]+"
        },
        "technical_contact": {
            "type": "string"
        },
        "business_contact": {
            "type": "string"
        }
    }
}
